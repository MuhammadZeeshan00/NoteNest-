<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for debug builds and localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>  <!-- Android emulator's alias for localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">your-api-domain.com</domain>  <!-- Replace with your actual API domain -->
    </domain-config>
</network-security-config>
